<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical">
    <EditText
        android:id="@+id/edt_jumlah_booking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Jumlah Booking"/>
    <EditText
        android:hint="Tanggal Pinjam"
        android:id="@+id/edt_tanggal_pinjam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"/>
    <EditText
        android:hint="Tanggal Kembali"
        android:id="@+id/edt_tanggal_kembali"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"/>

    <TextView
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:textSize="18sp"
        android:text="Stok = 2"
        android:id="@+id/txt_stok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>